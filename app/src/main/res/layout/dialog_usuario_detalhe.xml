<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5sp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_weight="0.51"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Telefone: "
            android:textColor="#c0c0c0"
            android:textSize="20sp"
            android:id="@+id/usuario_detalhe_telefone"
            android:layout_gravity="center" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="AQUI VAI O NUMERO"
            android:textColor="#696969"
            android:textSize="20sp"
            android:id="@+id/usuario_detalhe_numerotelefone"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_weight="0.51"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="E-mail: "
            android:textSize="20sp"
            android:textColor="#c0c0c0"
            android:id="@+id/usuario_detalhe_email"
            android:layout_gravity="center" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="AQUI VAI O EMAIL"
            android:textColor="#696969"
            android:textSize="15sp"
            android:id="@+id/usuario_detalhe_infoemail"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>