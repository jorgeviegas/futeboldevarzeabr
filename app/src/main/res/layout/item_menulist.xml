<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ffffffff"
    >

    <ImageView
        android:id="@+id/menulist_imagemOpcao"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/menulist_nomeOpcao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/menulist_imagemOpcao"
        android:layout_alignTop="@+id/menulist_imagemOpcao"
        android:text="Item"
        android:textSize="20sp"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/menulist_descricaoOpcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menulist_nomeOpcao"
        android:layout_toRightOf="@+id/menulist_imagemOpcao"
        android:text="Sub item"
        android:textColor="#c0c0c0"
        android:paddingLeft="5dp"
        />

</RelativeLayout>