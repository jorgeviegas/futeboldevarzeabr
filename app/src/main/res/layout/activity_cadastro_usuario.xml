<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.sharkweb.fbv.CadastroUsuarioActivity">

    <EditText
        android:id="@+id/cadastro_usuario_edtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Nome completo:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cadastro_usuario_edtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cadastro_usuario_edtNome"
        android:ems="10"
        android:hint="E-mail:"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/cadastro_usuario_edtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Senha:"
        android:inputType="textPassword"
        android:layout_above="@+id/cadastro_usuario_edtConfirmarSenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cadastro_usuario_edtConfirmarSenha"
        android:layout_alignEnd="@+id/cadastro_usuario_edtConfirmarSenha" />

    <Button
        android:id="@+id/cadastroUsuario_btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_below="@+id/cadastro_usuario_spinner_posicao"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/cadastro_usuario_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/cadastro_usuario_edtConfirmarSenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/cadastro_usuario_spinner_posicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/cadastro_usuario_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cadastro_usuario_btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_below="@+id/cadastro_usuario_spinner_posicao"
        android:layout_toLeftOf="@+id/cadastroUsuario_btnRegistrar"
        android:layout_toStartOf="@+id/cadastroUsuario_btnRegistrar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cadastro_usuario_edtConfirmarSenha"
        android:hint="Confirmar senha:"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cadastro_usuario_edtCelular"
        android:layout_alignEnd="@+id/cadastro_usuario_edtCelular" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/cadastro_usuario_edtCelular"
        android:layout_below="@+id/cadastro_usuario_edtApelido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Celular:"
        android:layout_alignRight="@+id/cadastro_usuario_edtApelido"
        android:layout_alignEnd="@+id/cadastro_usuario_edtApelido" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cadastro_usuario_edtApelido"
        android:layout_below="@+id/cadastro_usuario_edtEmail"
        android:layout_alignParentLeft="true"
        android:hint="Nome de usuario:"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
