<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ffffffff"
    >

    <ImageView
        android:id="@+id/jogoslist_imagemtime"
        android:layout_width="10dp"
        android:layout_height="52dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/jogoslist_nometimes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/jogoslist_imagemtime"
        android:layout_alignTop="@+id/jogoslist_imagemtime"
        android:text="Nome usuario"
        android:textSize="15sp"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/jogoslist_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jogoslist_nometimes"
        android:layout_toRightOf="@+id/jogoslist_imagemtime"
        android:text="Posicao"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/jogoslist_seila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jogoslist_nometimes"
        android:layout_alignParentRight="true"
        android:text="tipousuario"
        android:textColor="#333333"
        />
</RelativeLayout>