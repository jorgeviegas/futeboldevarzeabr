<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/timelist_imagemtime"
        android:layout_width="10dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/timelist_nometime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/timelist_imagemtime"
        android:layout_alignTop="@+id/timelist_imagemtime"
        android:text="Nome Time"
        android:textSize="20sp"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/timelist_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timelist_nometime"
        android:layout_toRightOf="@+id/timelist_imagemtime"
        android:text="local"
        android:textSize="15sp"
        android:textColor="#a9a9a9"
        android:paddingLeft="5dp"
        />

    <ImageView
        android:id="@+id/timelist_imgfavorito"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="favorito"
        android:textColor="#333333"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>