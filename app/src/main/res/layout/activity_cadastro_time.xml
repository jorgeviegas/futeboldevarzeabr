<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.sharkweb.fbv.CadastroTimeActivity">

    <EditText
        android:id="@+id/cadastro_time_edtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Nome do time:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cadastro_time_edtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cadastro_time_edtNome"
        android:ems="10"
        android:hint="E-mail:"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/cadastroTime_btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cadastro_time_edtEmail"
        android:layout_marginTop="78dp"
        android:text="Registrar" />

    <Button
        android:id="@+id/cadastroTime_btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cadastroTime_btnRegistrar"
        android:layout_toLeftOf="@+id/cadastroTime_btnRegistrar"
        android:layout_toStartOf="@+id/cadastroTime_btnRegistrar"
        android:text="Cancelar" />

</RelativeLayout>
