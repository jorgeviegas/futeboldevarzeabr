<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.sharkweb.fbv.CadastroTimeActivity">

    <EditText
        android:id="@+id/cadastro_time_edtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Nome do time:"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cadastro_time_edtCidade"
        android:layout_below="@+id/cadastro_time_edtNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/cadastro_time_ufspinner"
        android:hint="Cidade:"
        android:layout_toLeftOf="@+id/cadastro_time_ufspinner" />

    <Spinner
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:id="@+id/cadastro_time_ufspinner"
        android:layout_alignTop="@+id/cadastro_time_edtCidade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/cadastro_time_edtCidade" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/fundo_botoes"
        android:id="@+id/linearLayout">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Cancelar"
            android:background="@drawable/botao_cancelar"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:id="@+id/cadastro_time_btncancelar"
            android:layout_gravity="bottom" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Salvar"
            android:background="@drawable/botao_salvar"
            android:layout_margin="5sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/cadastro_time_btncadastrar"
            android:layout_gravity="bottom" />
    </LinearLayout>


</RelativeLayout>
